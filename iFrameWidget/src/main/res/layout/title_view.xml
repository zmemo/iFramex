<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/dp45">
	
	<ImageView
		android:id="@+id/mIvLeft"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:paddingStart="@dimen/dp10"
		android:paddingEnd="@dimen/dp10"
		android:src="@drawable/ic_back"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="ContentDescription" />
	
	<TextView
		android:id="@+id/mTvTitle"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginStart="@dimen/dp45"
		android:layout_marginEnd="@dimen/dp45"
		android:gravity="center"
		android:maxLines="1"
		android:textSize="@dimen/sp18"
		app:layout_constraintBottom_toTopOf="@id/mTvSubTitle"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="标题" />
	
	<TextView
		android:id="@+id/mTvSubTitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:maxLines="1"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/mTvTitle"
		app:layout_constraintRight_toRightOf="@id/mTvTitle"
		app:layout_constraintTop_toBottomOf="@id/mTvTitle" />
	
	<TextView
		android:id="@+id/mTvRight"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:maxLines="1"
		android:minWidth="@dimen/dp45"
		android:padding="@dimen/dp10"
		android:visibility="gone"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<View
		android:id="@+id/mLine"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp0_5"
		android:background="@color/color_F5F5F5"
		app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
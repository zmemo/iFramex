<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.status.LoadSirActivity">
	
	<com.memo.widget.titleview.TitleView
		android:id="@+id/mTitleView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:title_title_text="多种状态展示" />
	
	<Button
		android:id="@+id/mBtnLoad"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="加载中"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@id/mTitleView" />
	
	<Button
		android:id="@+id/mBtnEmpty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="暂无数据"
		app:layout_constraintLeft_toRightOf="@id/mBtnLoad"
		app:layout_constraintTop_toTopOf="@id/mBtnLoad" />
	
	<Button
		android:id="@+id/mBtnNetError"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="网络异常"
		app:layout_constraintLeft_toRightOf="@id/mBtnEmpty"
		app:layout_constraintTop_toTopOf="@id/mBtnLoad" />
	
	<Button
		android:id="@+id/mBtnServerError"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="服务器异常"
		app:layout_constraintLeft_toRightOf="@id/mBtnNetError"
		app:layout_constraintTop_toTopOf="@id/mBtnLoad" />
	
	<TextView
		android:id="@+id/mTvContent"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="60dp"
		android:gravity="center"
		android:text="这个是内容"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
